<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Generator</title>
    <link rel="stylesheet" href="/public/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Password Generator</h1>
      <form id="passwordForm">
        <label for="length">Length:</label>
        <input id="length" type="number" value="12" />

        <label for="includeSymbols">Include Symbols:</label>
        <input id="includeSymbols" type="checkbox" checked />

        <label for="includeNumbers">Include Numbers:</label>
        <input id="includeNumbers" type="checkbox" checked />

        <label for="customSet">Custom Set:</label>
        <input id="customSet" type="text" />

        <button type="submit">Generate Password</button>
      </form>

      <div id="result">
        <p>Your Password: <span id="generatedPassword"></span></p>
      </div>
    </div>
    <script src="/public/script.js"></script>
  </body>
</html>
